        <Rectangle Height="59" Margin="28,10,28,0" Stroke="Black" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="28,127,0,0" VerticalAlignment="Top" Height="74" Width="58" Click="click_button_7" Grid.ColumnSpan="2" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="150,127,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="58" Click="click_button_9" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="73,127,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="59" Click="click_button_9" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="28,218,0,0" VerticalAlignment="Top" Height="74" Width="58" Click="click_button_4" Grid.ColumnSpan="2" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="150,218,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="58" Click="click_button_6" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="73,218,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="59" Click="click_button_5" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
