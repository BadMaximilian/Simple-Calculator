        <Button Content="+" HorizontalAlignment="Left" Margin="223,400,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="59" Click="click_button_plus" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
