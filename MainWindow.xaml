        <Button Content="3" HorizontalAlignment="Left" Margin="150,309,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="58" Click="click_button_3" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="73,309,0,0" VerticalAlignment="Top" Grid.Column="1" Height="74" Width="59" Click="click_button_2" FontSize="20" FontFamily="Arial" FontWeight="Bold"/>
